{
  "name": "monorepo",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "devDependencies": {
    "turbo": "latest",
    "rimraf": "^6.0.1",
    "prettier": "^3.6.2",
    "eslint": "^9.36.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "packageManager": "npm@10.8.2"
}
